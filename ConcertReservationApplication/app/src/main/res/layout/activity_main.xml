<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    tools:context=".MainActivity">-->

    <TextView
        android:id="@+id/logInText"
        android:layout_width="414dp"
        android:layout_height="78dp"
        android:fontFamily="@font/archivo_black"
        android:text="Concert Reservation Application"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/homePageLogInAsAdmin"
        android:layout_width="253dp"
        android:layout_height="108dp"
        android:layout_marginTop="36dp"
        android:text="Admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePageLogInAsEmployee"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/homePageButtonLogInAsUser"
        android:layout_width="253dp"
        android:layout_height="108dp"
        android:layout_marginTop="36dp"
        android:text="User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInText" />

    <Button
        android:id="@+id/homePageLogInAsEmployee"
        android:layout_width="253dp"
        android:layout_height="108dp"
        android:layout_marginTop="36dp"
        android:text="Employee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homePageButtonLogInAsUser" />

</androidx.constraintlayout.widget.ConstraintLayout>